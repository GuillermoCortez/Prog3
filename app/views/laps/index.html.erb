<p id="notice"><%= notice %></p>

<h1>Laps</h1>

<table class="table table-primary table-striped table-md table-hover">
  <thead class="table-dark">
    <tr>
      <th>Number</th>
      <th>Position</th>
      <th>Time</th>
      <th>Pilot</th>
      <th>Race</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @laps.each do |lap| %>
      <tr>
        <td><%= lap.number %></td>
        <td><%= lap.position %></td>
        <td><%= lap.time %></td>
        <td><%= lap.pilot.name %></td>
        <td><%= lap.race.name %></td>
        <td><%= link_to 'Show', lap %></td>
        <td><%= link_to 'Edit', edit_lap_path(lap) %></td>
        <td><%= link_to 'Destroy', lap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

