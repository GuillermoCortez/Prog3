<p id="notice"><%= notice %></p>

<h1>Pilot Teams</h1>

<table class="table table-primary table-striped table-md table-hover">
  <thead class="table-dark">
    <tr>
      <th>Pilot</th>
      <th>Team</th>
      <th>Championship</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pilot_teams.each do |pilot_team| %>
      <tr>
        <td><%= pilot_team.pilot.name %></td>
        <td><%= pilot_team.team.name %></td>
        <td><%= pilot_team.championship.name %></td>
        <td><%= link_to 'Show', pilot_team %></td>
        <td><%= link_to 'Edit', edit_pilot_team_path(pilot_team) %></td>
        <td><%= link_to 'Destroy', pilot_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

